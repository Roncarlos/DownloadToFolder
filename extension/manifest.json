{
  "manifest_version": 3,
  "name": "Download Regex To Folder",
  "version": "1.0.0",
  "description": "A Chrome extension to download files matching a regular expression to a specific folder.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon16.png",
    "48": "images/icon16.png",
    "128": "images/icon16.png"
  },
  "permissions": [
    "downloads",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon16.png",
      "48": "images/icon16.png",
      "128": "images/icon16.png"
    }
  }
}